@model Employee.Frontend.Models.Countrys

@{
    if (ViewBag.SubmitName == "Save")
    {
        ViewData["Title"] = $"Update {Model.CountryName}";
    }
    else
    {
        ViewData["Title"] = "Create New Country";
    }
}

@if (ViewBag.SubmitName == "Save")
    {
    <h1>Update @Model.CountryName</h1>
    }
    else
    {
    <h1>Create New Country</h1>
    }
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddorEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courencies" class="control-label"></label>
                <input asp-for="Courencies" class="form-control" />
                <span asp-validation-for="Courencies" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="@ViewBag.SubmitName" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
